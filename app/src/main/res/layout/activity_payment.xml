<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".activities.PaymentActivity">

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_close"
        android:layout_gravity=""
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.AppCompat.Button.Borderless.Colored">
    </Button>


    <TextView
        android:id="@+id/ttnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="000000000">
    </TextView>

    <TextView
        android:id="@+id/textSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_sum"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/ttnText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>


    <ImageButton
        android:id="@+id/btnGooglePay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/google_pay"
        android:background="@drawable/btn_corners"
        android:scaleType="fitCenter"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textSum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </ImageButton>


    <ImageButton
        android:id="@+id/btnApplePay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/apple_pay_icon"
        android:scaleType="fitCenter"
        android:layout_marginTop="15dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/btn_corners"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btnGooglePay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </ImageButton>


    <ImageButton
        android:id="@+id/btnCryptoPay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/crypto_pay_logo"
        android:scaleType="fitCenter"
        android:layout_marginTop="15dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/btn_corners"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btnApplePay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </ImageButton>



</androidx.constraintlayout.widget.ConstraintLayout>